@model AccountCreateView

<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-header">
            <span class="widget-header-icon fa fa-th-list"></span>
            <h5>@Headers.Account</h5>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <input class="hidden" type="password" /> @* Forcing browser to not remember following form inputs *@
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        <label asp-for="Username"></label>
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        <input asp-for="Username" class="form-control" autocomplete="off" />
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        <input asp-for="Email" class="form-control" autocomplete="off" />
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="control-label col-xs-12 col-md-3 col-lg-2">
                        <label asp-for="RoleId"></label>
                    </div>
                    <div class="control-content col-xs-12 col-md-9 col-lg-5">
                        @Html.LookupFor(model => model.RoleId, new MvcLookup<Role, RoleView>(Url))
                    </div>
                    <div class="control-validation col-xs-12 col-lg-5">
                        <span asp-validation-for="RoleId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-xs-12 col-lg-7">
                        <button type="submit" class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
