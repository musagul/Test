@model AccountView

<div class="col-xs-12">
    <div class="widget-box readonly">
        <div class="widget-header">
            <span class="widget-header-icon fa fa-th-list"></span>
            <h5>@Headers.Account</h5>
            <div class="widget-header-buttons">
                <authorize action="Edit">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">
                        <i class="fa fa-pencil"></i><span class="text">@Actions.Edit</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="Username"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <input asp-for="Username" class="form-control" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <input asp-for="Email" class="form-control" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="IsLocked"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <input asp-for="IsLocked" />
                </div>
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="RoleTitle"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <input asp-for="RoleTitle" class="form-control" autocomplete="off" />
                </div>
            </div>
        </div>
    </div>
</div>
